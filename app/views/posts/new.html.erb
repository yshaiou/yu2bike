<h1>New Post</h1>

<!--# with out the = sign, all below wouldn't work-->

<%= form_for :post, url: posts_path do |f| %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	
	</p>

	<p>
		<%= f.submit "Submit" %>
	</p>
<% end %>

